<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">
    <appender class="org.apache.log4j.ConsoleAppender" name="ConsoleAppender">
        <param name="Target" value="System.out" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                value="%d{yyyy-MM-dd HH:mm:ss} %t [%p] %l \: %m%n" />
        </layout>
    </appender>
    
    <appender class="org.apache.log4j.DailyRollingFileAppender" name="AllFileAppender">
        <param name="File" value="${catalina.base}/logs/ncs/all.log" />
        <param name="Append" value="true" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %t [%p] %l \: %m%n" />
        </layout>
    </appender>

    <appender class="org.apache.log4j.DailyRollingFileAppender" name="VisitLogAppender">
        <param name="File" value="${catalina.base}/logs/ncs/visit.log" />
        <param name="Append" value="true" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%p] %l \: %m%n" />
        </layout>
    </appender>
    
    <appender class="org.apache.log4j.DailyRollingFileAppender" name="ErrorFileAppender">
        <param name="File" value="${catalina.base}/logs/ncs/error.log" />
        <param name="Append" value="true" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} [%p] %l \: %m%n" />
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="LevelMin" value="ERROR" />
            <param name="LevelMax" value="ERROR" />
        </filter>        
    </appender>
    
    <appender class="org.apache.log4j.DailyRollingFileAppender" name="ExpandWordFileAppender">
        <param name="File" value="${catalina.base}/logs/ncs/expandword.log" />
        <param name="Append" value="true" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} [%p] %l \: %m%n" />
        </layout>
    </appender>

    <logger additivity="false" name="com.cubead.ncs.common.security">
        <level value="INFO" />
        <appender-ref ref="VisitLogAppender" />
    </logger>

    <logger additivity="false" name="com.cubead.framework.web.filter">
        <level value="INFO" />
        <appender-ref ref="VisitLogAppender" />
    </logger>
    
   <logger additivity="false" name="com.cubead.umc.filter">
        <level value="INFO" />
        <appender-ref ref="VisitLogAppender" />
    </logger>
        
    
    <logger additivity="false" name="com.cubead">
        <level value="INFO" />
        <appender-ref ref="AllFileAppender" />
        <appender-ref ref="ErrorFileAppender" />
        <appender-ref ref="ConsoleAppender" />
    </logger>
    
    <logger additivity="false" name="org.apache.velocity">
        <level value="INFO" />
        <appender-ref ref="ErrorFileAppender" />
    </logger>
    
    <logger additivity="false" name="ExpandWordLog">
        <level value="INFO" />
            <appender-ref ref="ExpandWordFileAppender" />
    </logger>
    
    <root>
        <level value="INFO" />
        <appender-ref ref="AllFileAppender" />
        <appender-ref ref="ErrorFileAppender" />
        <appender-ref ref="ConsoleAppender" />
        <appender-ref ref="ExpandWordFileAppender"/>
    </root>
</log4j:configuration>